# Hermes Backend Configuration
# Copy this file to .env and configure for your environment

# Application Settings
APP_NAME=Hermes API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Database Settings (PostgreSQL)
POSTGRES_USER=hermes
POSTGRES_PASSWORD=hermes_password_change_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hermes_db

# JWT Authentication
SECRET_KEY=your-secret-key-CHANGE-THIS-IN-PRODUCTION-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Ollama LLM Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=300

# Web Search MCP Settings
WEB_SEARCH_MCP_URL=http://localhost:8001

# Container Use Settings
CONTAINER_USE_ENABLED=true
CONTAINER_BASE_IMAGE=ubuntu:24.04

# File Storage Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800
# Allowed extensions (JSON array format): [".pdf", ".txt"]

# Task Scheduler Settings
SCHEDULER_ENABLED=true
MAX_CONCURRENT_TASKS=3
TASK_RETRY_ATTEMPTS=3

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/hermes.log

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
