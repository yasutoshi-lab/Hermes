# Hermes Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://hermes_user:hermes_password@localhost:5432/hermes
POSTGRES_DB=hermes
POSTGRES_USER=hermes_user
POSTGRES_PASSWORD=hermes_password

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b

# Web Search MCP Configuration
WEB_SEARCH_MCP_URL=http://localhost:8001
WEB_SEARCH_MCP_ENABLED=True

# Container Use Configuration
CONTAINER_USE_ENABLED=True
CONTAINER_USE_BASE_IMAGE=ubuntu:24.04

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,md

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@hermes.local

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True

# Task Scheduler
SCHEDULER_TIMEZONE=UTC
MAX_CONCURRENT_TASKS=5

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
